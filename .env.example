# ── FastAPI ──────────────────────────────────────────────────────
APP_NAME=SignalEngine
HOST=0.0.0.0
PORT=8000
DEBUG=false

# ── Redis ─────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_KEY_TTL=300

# ── Multi-Timeframe Analysis ──────────────────────────────────────
TIMEFRAMES=["1m", "5m", "15m", "1h"]
PRIMARY_TIMEFRAME=5m
MTF_ALIGNMENT_REQUIRED=true
MTF_MIN_ALIGNED=2

# ── Signal Engine Settings ────────────────────────────────────────
SIGNAL_SCORE_THRESHOLD=0.50
SIGNAL_COOLDOWN_SECONDS=300

# ── Signal Tracker (TP/SL Management) ─────────────────────────────
TRACKER_ENABLED=true
TP_ATR_MULTIPLIER=2.0
SL_ATR_MULTIPLIER=1.0
SIGNAL_MAX_TTL=3600
PRICE_CHECK_INTERVAL=1.0

# ── Telegram Bot ──────────────────────────────────────────────────
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Chat ID for signal notifications (get from @userinfobot or @getidsbot)
TELEGRAM_CHAT_ID=

# Allowed chat IDs for bot queries (JSON array)
TELEGRAM_ALLOWED_CHAT_IDS=[]

TELEGRAM_QUERY_TIMEOUT=30
TELEGRAM_RATE_LIMIT=1.0

# AI features removed - using rule-based responses

# ── AI (Version 2 - Optional) ─────────────────────────────────────
AI_ENABLED=false
AI_MODEL_PATH=research/models/model.json
AI_CONFIDENCE_THRESHOLD=0.50

# ── Technical Indicators ──────────────────────────────────────────
ATR_PERIOD=14
EMA_FAST=9
EMA_SLOW=21
VWAP_PERIOD=20
FUNDING_ZSCORE_WINDOW=50
OI_DELTA_WINDOW=10
LIQ_RATIO_WINDOW=20
STRUCTURE_LOOKBACK=20
ORDERBOOK_IMBALANCE_THRESHOLD=0.3

# ── Database ──────────────────────────────────────────────────────
SQLITE_DB_NAME=signalengine.db

# ── Monitoring ────────────────────────────────────────────────────
MONITOR_INTERVAL=30.0

# ── Logging ───────────────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_JSON=true
